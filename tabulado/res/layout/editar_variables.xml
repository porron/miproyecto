<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal"
    android:rowCount="15" >

    <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/tnombre"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal|center_vertical"
        android:layout_row="0"
        android:ems="10" android:inputType="">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="offset"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerRango"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2" />

    <EditText
        android:id="@+id/trefresco"
        android:layout_width="124dp"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="2"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Tipo variable"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerTipo"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="TamaÃ±o historial"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="Representacion"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/t2"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="Rango"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/textoip"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="5"
        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinnerrepresentacion"
        android:layout_width="151dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="7" />

    <EditText
        android:id="@+id/tlong"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:text="Longitud grafico"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</GridLayout>